<!-- item_grade_list.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/item_background"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/text_subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Subject Name" />

    <TextView
        android:id="@+id/text_average_grade_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_average_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:layout_toStartOf="@id/text_average_grade_label"
        android:layout_below="@id/text_subject_name"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_list_count"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_average_grade"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="207dp"
        android:layout_toStartOf="@id/text_average_grade_label"
        android:text="Lists: 0" />

</RelativeLayout>
